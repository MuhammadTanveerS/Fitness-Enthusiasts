<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/_15mdp"
        android:layout_gravity="right|center"
        android:gravity="center">
        <TextView
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="@dimen/_15font_mdp"
            android:textColor="@color/custom_black"/>
        <ImageView
            android:layout_width="@dimen/_20mdp"
            android:layout_height="@dimen/_20mdp"
            android:src="@drawable/laderboard_up" />

    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_50mdp"
        app:cardBackgroundColor="@color/black">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePic"
            android:layout_width="@dimen/_40mdp"
            android:layout_height="@dimen/_40mdp"
            app:civ_border_color="@color/neon"
            app:civ_border_width="1dp"

            android:layout_marginEnd="15dp"
            android:layout_marginLeft="@dimen/_40mdp"
            android:src="@drawable/avatar_female" />
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/robotoregular"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/_45mdp"
            android:layout_gravity="center_vertical"
            android:text=" @username"/>
        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/neon"
            android:layout_marginRight="@dimen/_20mdp"
            android:fontFamily="@font/robotoregular"
            android:layout_gravity="center_vertical|right"
            android:textSize="16sp"
            android:text=" 150"/>

    </androidx.cardview.widget.CardView>



</LinearLayout>