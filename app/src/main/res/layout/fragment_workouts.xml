<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.Common.WorkoutsFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_marginTop="@dimen/_15mdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_10mdp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_130mdp"
                        android:layout_marginLeft="@dimen/_10mdp"
                        android:layout_marginRight="@dimen/_10mdp"
                        android:layout_height="@dimen/_130mdp"
                        app:cardCornerRadius="@dimen/_20mdp"
                        app:cardBackgroundColor="#7a19f5">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/running"
                            android:layout_marginLeft="@dimen/_30mdp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/robotoblack"
                            android:text="Cardio"
                            android:layout_marginLeft="@dimen/_15mdp"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/_20font_mdp"/>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_130mdp"
                        android:layout_height="@dimen/_130mdp"
                        app:cardCornerRadius="@dimen/_20mdp"
                        app:cardBackgroundColor="#f8b732"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="@dimen/_140mdp"
                            android:layout_height="@dimen/_140mdp"
                            android:src="@drawable/fullbody"
                            android:layout_marginLeft="@dimen/_30mdp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/robotoblack"
                            android:text="Full Body"
                            android:layout_marginLeft="@dimen/_10mdp"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/_20font_mdp"/>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_130mdp"
                        android:layout_marginLeft="@dimen/_10mdp"
                        android:layout_marginRight="@dimen/_10mdp"
                        android:layout_height="@dimen/_130mdp"
                        app:cardCornerRadius="@dimen/_20mdp"
                        app:cardBackgroundColor="#08c2f0"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/yoga"
                            android:layout_marginLeft="@dimen/_30mdp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/robotoblack"
                            android:text="Yoga"
                            android:layout_marginLeft="@dimen/_10mdp"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/_20font_mdp"/>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_130mdp"
                        android:layout_height="@dimen/_130mdp"
                        app:cardCornerRadius="@dimen/_20mdp"
                        app:cardBackgroundColor="#66a8b1"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_120mdp"
                            android:src="@drawable/arms"
                            android:layout_marginTop="@dimen/_13mdp"
                            android:layout_marginRight="-30dp"
                            android:layout_marginLeft="@dimen/_20mdp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/robotoblack"
                            android:text="Arms"
                            android:layout_marginLeft="@dimen/_10mdp"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/_20font_mdp"/>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_130mdp"
                        android:layout_marginLeft="@dimen/_10mdp"
                        android:layout_marginRight="@dimen/_10mdp"
                        android:layout_height="@dimen/_130mdp"
                        app:cardCornerRadius="@dimen/_20mdp"
                        app:cardBackgroundColor="#9958ab"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/chest"
                            android:layout_marginLeft="@dimen/_30mdp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/robotoblack"
                            android:text="Chest"
                            android:layout_marginLeft="@dimen/_10mdp"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/_20font_mdp"/>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_130mdp"
                        android:layout_height="@dimen/_130mdp"
                        android:layout_marginRight="@dimen/_10mdp"
                        app:cardCornerRadius="@dimen/_20mdp"
                        app:cardBackgroundColor="#2acd84"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="@dimen/_170mdp"
                            android:layout_height="@dimen/_160mdp"
                            android:src="@drawable/legs"
                            android:layout_marginTop="-20dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/robotoblack"
                            android:text="Legs"
                            android:layout_marginLeft="@dimen/_10mdp"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/_20font_mdp"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <!--        <include layout="@layout/workouts_view_layout"/>-->



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/workoutRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:backgroundTint="@color/neon"
        android:foregroundTint="@color/neon"
        android:progressBackgroundTint="@color/neon"
        android:indeterminateTint="@color/neon"
        android:visibility="visible" />

</FrameLayout>