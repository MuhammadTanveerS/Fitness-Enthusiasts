<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="@dimen/_50mdp"
        android:layout_height="@dimen/_50mdp"
        app:civ_border_color="@color/neon"
        app:civ_border_width="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/avatar_female" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/_55mdp"
        android:layout_alignLeft="@id/profilePic">
        <TextView
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/custom_black"
            android:fontFamily="@font/robotoregular"
            android:textSize="16sp"
            android:text="Angelina Armstrong"/>
        <TextView
            android:id="@+id/notificationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="15 Followers"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/sub_grey"
        android:fontFamily="@font/robotoregular"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="10dp"
        android:text="Follow"
        android:textSize="12sp" />

</RelativeLayout>